# TeacherBean Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ================================
# REQUIRED: Supabase Configuration
# ================================
# Get these from your Supabase project dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project
# 3. Go to Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ================================
# REQUIRED: OpenAI Configuration
# ================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...your_openai_api_key_here
AI_MODEL=gpt-4o-mini

# ================================
# APPLICATION CONFIGURATION
# ================================
# For local development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# For production (update when deploying)
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# ================================
# OPTIONAL: Email Notifications
# ================================
# For sending assignment notifications, password resets, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# ================================
# OPTIONAL: File Upload Settings
# ================================
NEXT_PUBLIC_MAX_UPLOAD_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg

# ================================
# OPTIONAL: Security & Rate Limiting
# ================================
NEXTAUTH_SECRET=your-super-secret-key-min-32-chars
NEXTAUTH_URL=http://localhost:3000
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ================================
# DEVELOPMENT SETTINGS
# ================================
NODE_ENV=development
DEBUG=true
PORT=3000

# ================================
# TESTING CONFIGURATION
# ================================
# For automated tests
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test123456
DATABASE_URL=postgresql://postgres:password@localhost:5432/teacherbean_test